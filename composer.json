{
    "name": "nathanlesage/Zettlr",
    "description": "Zettlr is a Zettelkasten implementation",
    "keywords": ["writing", "creative writing", "academic", "note"],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Nathan LeSage",
            "role": "Developer"
        },
        {
            "name": "SamwiseK",
            "role": "Developer"
        }

    ],
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.2.*",
        "graham-campbell/markdown": "^6.0",
        "oyejorge/less.php": "v1.7.0.10",
        "league/commonmark": "^0.13",
        "openjournalsoftware/bibtex": "^0.2.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "symfony/css-selector": "2.8.*|3.0.*",
        "symfony/dom-crawler": "2.8.*|3.0.*",
        "laravelcollective/html": "5.2.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
